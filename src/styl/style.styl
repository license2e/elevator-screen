/*= Global
------------------------------------------------- */

max-width = 970px
footer-size = 50px

*
  -webkit-touch-callout none
  -webkit-user-select none
  -webkit-user-drag drag
  outline none

::selection
  color #7685a9
  background rgba(41,48,64,.9)

::-webkit-input-placeholder
  color #ccc
  
::-webkit-scrollbar-track
  background transparent

body, a
  font-family 'PT Sans', Arial, sans-serif
  line-height 18px
  font-size 13px
  font-weight 400
  color #fff
  text-decoration none
  overflow hidden
  
body 
  background #d9d9d9
  
.clear
  clear both

.rendered
  display none

.rendered.tplshow
  display block

#app
  z-index 0

#aside
  position absolute
  right 0
  top 0
  height 100%
  width 20px
  z-index 210
  font-size 22px
  overflow hidden
  -webkit-transition width .5s ease-out
  
  a
    font-size 22px

  #aside-content
    position absolute
    left 20px
    top 0
    height 100%
    width 250px
    background-color rgba(51,51,51,.9)
    border-left 1px solid #222
    overflow hidden

    #aside-close
      position absolute
      left 0
      top 0
      height 14px
      width 14px
      padding 12px
      font-size 18px
      display block

    #controls 
      color #fff
      text-shadow 1px 1px 1px #044c62
      margin-top 38px
      
      a
        padding 15px 25px
        display block
        cursor pointer
  
    #debug 
      //display none
      height 500px
      width 100%
      position absolute
      bottom 0

      #debug-info
        height 400px
        overflow auto
  
      a
        display block
        padding 25px
        cursor pointer
        
        #inspect-icon
          color rgba(250,250,250,.5)
          margin-left -16px
          font-size 17px
          text-shadow 0px 1px 1px #222
      
      a#clear-settings
        position absolute
        height 20px
        bottom 0

      #version
        font-size 12px
        position absolute
        bottom 24px
        right 10px
      
      #copyright
        font-size 12px
        position absolute
        bottom 2px
        left 0
        width 250px
        text-align center
        opacity .2


#aside.shown
  width 270px
  
/*= Specific
------------------------------------------------- */
#article
  min-width 1024px

  section
    //display block
    width 100%
    height 100%
    position absolute
    
    .section-content
    
      .message
        padding 100px 50px
        text-align center
      
      .temp-num
        font-size 20px
        line-height 20px
      
      .temp-num::after, #temp-num::after
        content "Ëš"
      
      .temp-label
        text-transform uppercase
        font-size 10px
        line-height 10px
        padding-left 2px
  
  section#welcome-section
    background-color #73b1c4
    width 556px
    height 312px
    padding 10px
    top 220px
    left 50%
    margin-left -278px
    border-radius 6px
    
    .section-content
      background-color #f7f7f7
      border-radius 4px
      width 556px
      height 312px
      margin 0px
      color #808080
      position relative
    
      h1, h2
        text-align center
      
      #logo
        position absolute
        top -28px
        left 50%
        margin-left -51px
        z-index 20
    
      #logo-bkg
        border-radius 51px
        width 102px
        height 102px
        background-color #f7f7f7
        position absolute
        top -33px
        left 50%
        margin-left -51px
        z-index 18
      
      #app-info
        position relative
        
        #app-loading
          padding 182px 0 0 0   
          position absolute
          top 0
          left 0
          width 100%
          text-align center
        
        #app-info-set
          padding 182px 0 0 0
          position absolute
          top 0
          left 0
          width 100%
          display none
        
          form#set-app-url
            margin 0 30px
        
            label
              color #808080
              font-size 18px
              display inline-block
        
            #app-url-container
              width 200px
          
            #app-token-container
              float right
              text-align left
              width 234px
              margin-right 30px
        
            #app-url, #app-token
              width 100%
              background-color #f7f7f7
              padding 8px 12px
              border 2px solid #ddd
              border-radius 6px
              color #808080
              -webkit-user-select initial
        
            #app-url::-webkit-input-placeholder, #app-token::-webkit-input-placeholder
              color #aeaeae
          
            #app-submit
              background-color transparent
              background-image url(images/app-url-go.png)
              background-repeat no-repeat
              background-position 0 0
              width 60px
              height 34px
              border none
              text-indent 115%
              white-space nowrap
              overflow hidden
              //position absolute
              //bottom 2px
              //right 2px
              cursor pointer
              float right
              margin 10px 2px
        
            #app-submit:hover
              background-position 0 -34px
        
  
  section#main-section
    background-color #0785ab
    height 100%
  
    #forecast-section
      background-color #0ca7d3
      float left
      width 40%
      min-width 410px
      height 41%
      padding 12px 0
    
      .section-content
        margin 0 25px
        font-family 'Oswald'
        font-weight 700
      
        #time
          font-size 90px
          line-height 84px
          text-align center
          position relative
          width 250px
          margin 0 auto 12px
        
          #time-display
            text-shadow 1px 1px 1px #044c62
        
          #time-am, #time-pm
            text-transform uppercase
            position absolute
            right 0
            color #044c62
            font-size 12px
            line-height 12px
          
          #time-am
            top 0
          
          #time-pm
            bottom 0
      
        #date
          font-size 30px
          line-height 26px
          color #044c62
          text-transform uppercase
          padding-top 3px
          text-align center
          margin 0 0 10px 0
        
        #todays-forecast
          height 65px
          margin 0 auto 3px
          width 312px
        
          #temp-low
            float left
            color #044c62
            margin-top 29px
            margin-left 9px
        
          #temp-skycon
            width 68px
            height 68px
            float left
            margin-left 46px
            margin-right 9px
          
          #temp-num
            float left
            font-size 48px
            line-height 50px
            margin-top 14px
            margin-right 50px
            text-shadow 1px 1px 1px #044c62
          
          #temp-high
            float left
            color #044c62
            margin-top 29px

          #temp-high
            .temp-label
              padding 1px
          
        #week-forecast
          height 110px
          width 305px
          margin auto
          padding 2px 0 0 0
      
          .weekday-forecast
            float left
            width 50px
            border-right 1px solid #0785ab
            color #044c62
            font-weight 700
            padding 7px 0 1px 0
          
            .centered
              margin auto
              width 26px
          
            .temp-low, .temp-high
            
              .temp-num
                font-size 14px
                line-height 14px
                text-align center
        
            .temp-skycon
              margin 4px 12px 2px
            
            .temp-dow
              font-size 14px
              line-height 14px
              text-align center
              font-weight 400
              color #fff
              text-shadow 1px 1px 1px #044c62
              text-transform uppercase
              margin-top 5px
          
            .temp-label
              font-size 9px
              line-height 9px
              text-transform uppercase
              font-weight 400
              padding-left 2px

            .temp-low
              .temp-label
                padding-left 3px

          .weekday-forecast.last
            border none
    
    #external-news-section
